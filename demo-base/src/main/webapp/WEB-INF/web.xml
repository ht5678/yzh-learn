<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
    <jsp-config>
    <jsp-property-group>
      <display-name>JSPConfiguration</display-name>
      <url-pattern>*.html</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  
  
